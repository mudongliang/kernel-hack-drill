#!/bin/bash

export IMAGE=image
export IMG_NAME=wheezy

if [ ! -f ".port" ]; then
port=$(date +%N);
((port=$port%60000+5525));
echo "using $port"
echo -n $port > .port
fi;

port_num=$(cat .port);

cp -r -i ${IMAGE}/${IMG_NAME}.id_rsa -P $port_num -o "StrictHostKeyChecking no" $@ drill@localhost:/home/drill/
